{
    "require": {
        "shopsys/shopsys": "dev-master",
        "sylius/sylius": "1.0.0-beta.2",
        "phploc/phploc": "^4.0",
        "sebastian/phpcpd": "^3.0",
        "pdepend/pdepend": "^2.5",
        "phpmetrics/phpmetrics": "^2.2"
    },
    "repositories": [
        {
            "type": "package",
            "package": {
                "name": "shopsys/shopsys",
                "version": "dev-master",
                "type": "package",
                "source": {
                    "url": "git@git.shopsys-framework.com:shopsys/shopsys-framework.git",
                    "type": "git",
                    "reference": "master"
                }
            }
        }
    ],
    "scripts": {
        "complete-analysis": ["@loc", "@cpd", "@dep"],
        "loc": "phploc vendor/shopsys/shopsys/src",
        "cpd": "phpcpd vendor/shopsys/shopsys/src",
        "dep": "pdepend --jdepend-chart=output/pdepend/pdepend.svg --overview-pyramid=output/pdepend/pyramid.svg vendor/shopsys/shopsys/src",
        "metrics": "phpmetrics --report-html=output/php-metrics ./vendor/shopsys/shopsys/src"
    }
}
