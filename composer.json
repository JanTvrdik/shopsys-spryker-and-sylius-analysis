{
    "name": "tomasvotruba/shopsys-analysis",
    "require": {
        "phploc/phploc": "^4.0",
        "sebastian/phpcpd": "^3.0",
        "pdepend/pdepend": "^2.5",
        "phpmetrics/phpmetrics": "^1.5"
    },
    "scripts": {
        "loc": [
            "phploc project/shopsys/src",
            "phploc project/sylius/src",
            "phploc project/spryker/vendor/spryker"
        ],
        "cpd": [
            "phpcpd project/shopsys/src || true",
            "phpcpd project/sylius/src || true",
            "phpcpd project/spryker/vendor/spryker || true"
        ],
        "dep": [
            "pdepend --overview-pyramid=output/shopsys/pdepend-pyramid.svg project/shopsys/src",
            "pdepend --overview-pyramid=output/sylius/pdepend-pyramid.svg project/sylius/src",
            "pdepend --overview-pyramid=output/sylius/pdepend-pyramid.svg project/spryker/vendor/spryker"
        ],
        "met": [
            "phpmetrics --report-html=output/shopsys/php-metrics project/shopsys/src",
            "phpmetrics --report-html=output/sylius/php-metrics project/sylius/src",
            "phpmetrics --report-html=output/sylius/php-metrics --exclude=Tests,tests project/spryker/vendor/spryker"
        ]
    }
}
