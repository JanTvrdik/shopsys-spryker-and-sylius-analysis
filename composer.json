{
    "require": {
        "phploc/phploc": "^4.0",
        "sebastian/phpcpd": "^3.0",
        "pdepend/pdepend": "^2.5",
        "phpmetrics/phpmetrics": "^2.2"
    },
    "repositories": [
        {
            "type": "package",
            "package": {
                "name": "shopsys/shopsys",
                "version": "dev-master",
                "type": "package",
                "source": {
                    "url": "git@git.shopsys-framework.com:shopsys/shopsys-framework.git",
                    "type": "git",
                    "reference": "master"
                }
            }
        }
    ],
    "scripts": {
        "complete": ["@loc", "@cpd", "@dep", "@met"],
        "loc": [
            "phploc vendor/shopsys/shopsys/src",
            "phploc vendor/sylius/sylius/src"
        ],
        "cpd": [
            "phpcpd vendor/shopsys/shopsys/src",
            "phploc vendor/sylius/sylius/src"
        ],
        "dep": [
            "pdepend --overview-pyramid=output/shopsys/pdepend/pyramid.svg --jdepend-chart=output/shopsys/pdepend/pdepend.svg  vendor/shopsys/shopsys/src",
            "pdepend --overview-pyramid=output/sylius/pdepend/pyramid.svg --jdepend-chart=output/sylius/pdepend/pdepend.svg  vendor/sylius/sylius/src"
        ],
        "met": [
            "phpmetrics --report-html=output/shopsys/php-metrics --exclude=Tests,tests ./vendor/shopsys/shopsys/src",
            "phpmetrics --report-html=output/sylius/php-metrics --exclude=Tests,tests ./vendor/sylius/sylius/src"
        ]
    }
}
