{
    "name": "tomasvotruba/shopsys-analysis",
    "license": "MIT",
    "require": {
        "php": "^7.1",
        "phploc/phploc": "^4.0",
        "sebastian/phpcpd": "^3.0",
        "phpmetrics/phpmetrics": "^1.10",
        "symfony/console": "^3.3",
        "symfony/finder": "^3.3",
        "symfony/dependency-injection": "^3.3",
        "symfony/http-kernel": "^3.3",
        "symplify/package-builder": "^2.2",
        "phpstan/phpstan": "^0.8.5",
        "symplify/easy-coding-standard": "^2.3"
    },
    "require-dev": {
        "tracy/tracy": "^2.4"
    },
    "autoload": {
        "psr-4": {
            "TomasVotruba\\ShopsysAnalysis\\": "src"
        }
    },
    "scripts": {
        "met": [
            "phpmetrics --report-html=output/shopsys/php-metrics/index.html project/shopsys/src",
            "phpmetrics --report-html=output/spryker/php-metrics/index.html project/spryker/vendor/spryker --excluded-dirs='Tests|tests'",
            "phpmetrics --report-html=output/sylius/php-metrics/index.html project/sylius/src --excluded-dirs='spec|test|Tests|Behat'"
        ]
    }
}
